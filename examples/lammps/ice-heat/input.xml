<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv{megapascal}, volume, cell_h] </properties>
    <trajectory stride='1' filename='xc' format='pdb' cell_units='angstrom'> x_centroid{angstrom}</trajectory>
    <trajectory stride='1' filename='pos' format='xyz' cell_units='angstrom'> positions </trajectory>
    <trajectory stride='1' filename='mom' format='xyz' cell_units='angstrom'> momenta </trajectory>
    <trajectory stride='1' filename='Phys_J'> extras </trajectory>
    <checkpoint stride='2000'/>
  </output>
  <total_steps>100000</total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <ffsocket name='lammps' mode='unix'>
    <address>ice-npt</address>
  </ffsocket>
  <system>
    <initialize nbeads='4'>
      <file mode='xyz'> init.xyz </file>
      <velocities mode='thermal' units='kelvin'> 50 </velocities>
    </initialize>
    <forces>
      <force name='lammps' forcefield='lammps'>  </force>
    </forces>
    <ensemble>
      <temperature units='kelvin'> 200 </temperature>
    </ensemble>
    <motion mode='dynamics'>
      <dynamics mode='nvt'>
        <thermostat mode='svr'>
           <tau units='femtosecond'> 2200 </tau> 
        </thermostat>
        <timestep units='femtosecond'> 0.25 </timestep>
      </dynamics>
    </motion>
  </system>
</simulation>
